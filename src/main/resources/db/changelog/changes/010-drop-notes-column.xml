<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="010-drop-notes-column" author="thonbecker">
        <comment>Drop notes and game_duration_minutes columns from games table - no longer needed</comment>

        <!-- Drop notes column -->
        <dropColumn tableName="games" schemaName="foosball">
            <column name="notes"/>
        </dropColumn>

        <!-- Drop game_duration_minutes column -->
        <dropColumn tableName="games" schemaName="foosball">
            <column name="game_duration_minutes"/>
        </dropColumn>

    </changeSet>

</databaseChangeLog>
