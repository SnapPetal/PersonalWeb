<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="019-add-spring-modulith-event-publication" author="thonbecker">
        <comment>
            Add Spring Modulith event publication registry table.
            This table tracks published events for transactional event handling and replay.
            Schema matches Spring Modulith 2.0.1 requirements.
        </comment>

        <createTable tableName="event_publication">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="listener_id" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="event_type" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="serialized_event" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="publication_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="completion_date" type="timestamp">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex indexName="idx_event_publication_by_completion_date"
                     tableName="event_publication"
                     >
            <column name="completion_date"/>
            <column name="publication_date"/>
        </createIndex>

        <rollback>
            <dropIndex indexName="idx_event_publication_by_completion_date"
                      tableName="event_publication"
                      />
            <dropTable tableName="event_publication"  cascadeConstraints="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
