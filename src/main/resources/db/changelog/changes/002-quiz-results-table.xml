<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="002" author="thonbecker">
        <!-- Quiz Results table -->
        <createTable tableName="quiz_results" schemaName="trivia">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="quiz_title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="quiz_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="player_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="player_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="score" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="total_questions" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="correct_answers" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="completed_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="is_winner" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="difficulty" type="varchar(50)"/>
        </createTable>

        <!-- Indexes for quiz_results -->
        <createIndex tableName="quiz_results" indexName="idx_quiz_results_quiz_id" schemaName="trivia">
            <column name="quiz_id"/>
        </createIndex>
        <createIndex tableName="quiz_results" indexName="idx_quiz_results_player_id" schemaName="trivia">
            <column name="player_id"/>
        </createIndex>
        <createIndex tableName="quiz_results" indexName="idx_quiz_results_completed_at" schemaName="trivia">
            <column name="completed_at"/>
        </createIndex>
        <createIndex tableName="quiz_results" indexName="idx_quiz_results_is_winner" schemaName="trivia">
            <column name="is_winner"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>